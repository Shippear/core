# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Serve index page from public directory
GET     /                                  controller.FrontendController.index()

# An example route (Prefix all API routes with apiPrefix defined in application.conf)
GET     /shippear/summary                  controller.HomeController.appSummary

# Shippear
# Users
GET      /shippear/users/all               controller.UserController.allUsers
GET      /shippear/users/orders/:idUser    controller.UserController.ordersByState(idUser: String)
POST     /shippear/users/find              controller.UserController.findUser
POST     /shippear/users/create            controller.UserController.createUser
POST     /shippear/users/update            controller.UserController.updateUser


# Orders
GET      /shippear/orders/all              controller.OrderController.allOrders
POST     /shippear/orders/find             controller.OrderController.findOrder
POST     /shippear/orders/create           controller.OrderController.createOrder
POST     /shippear/orders/update           controller.OrderController.updateOrder
POST     /shippear/orders/cancel/:idOrder  controller.OrderController.cancelOrder(idOrder: String)
POST     /shippear/orders/assign-carrier   controller.OrderController.assignCarrier
POST     /shippear/orders/validate-qr-code controller.OrderController.validateQrCode

#Mails Test
GET      /shippear/mail/devices             controller.MailController.devices(id: Option[String])
GET      /shippear/mail/send/:id/:typeMail  controller.MailController.sendEmail(id: String, typeMail: String)
GET      /shippear/mail/activate/:status    controller.MailController.activate(status: Boolean)

# Tracking
GET     /shippear/cache/:idUser            controller.CacheController.geolocation(idUser: String)
POST    /shippear/cache                    controller.CacheController.updateLocation
POST    /shippear/cache/active/:status     controller.CacheController.active(status: Boolean)

# Route Distances and Prices
POST    /shippear/routes/information       controller.RouteMapController.addressInformation

# Serve static assets under public directory
GET     /*file                             controller.FrontendController.assetOrDefault(file)
